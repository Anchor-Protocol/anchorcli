{
  "private": true,
  "version": "1.0.0",
  "author": "Anchor Protocol",
  "license": "Apache-2.0",
  "workspaces": [
    "anchor.js",
    "cli"
  ],
  "scripts": {
    "lint": "eslint \"**/src/*.{js,ts,tsx}\"",
    "format": "prettier \"**/src/**/*.{js,ts,json}\" --write",
    "start": "multiplerun start",
    "build": "yarn workspace @anchor-protocol/anchor.js run build && yarn workspace @anchor-protocol/cli run build",
    "publish": "yarn workspace @anchor-protocol/anchor.js run publish && yarn workspace @anchor-protocol/cli run publish",
    "e2e": "yarn run build && bash test/e2e.sh",
    "test": "jest --colors",
    "coverage": "jest --coverage"
  },
  "multiplerun": {
    "start": [
      "cd anchor.js; yarn run watch",
      "cd cli; node bin/anchorcli --help"
    ]
  },
  "devDependencies": {
    "@ssen/eslint-config": "^1.3.1",
    "@ssen/prettier-config": "^1.2.0",
    "@types/eslint": "^7.2.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/prettier": "2.1.6",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "multiplerun": "^1.1.2",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
